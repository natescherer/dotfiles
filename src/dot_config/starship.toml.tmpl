format = """
[](fg:color_orange)\
$os\
$hostname\
$container\
$username\
[](bg:color_purple fg:color_orange)\
$directory\
[](bg:color_yellow fg:color_purple)\
$mise\
[](fg:color_yellow bg:color_aqua)\
$git_branch\
$git_commit\
$git_status\
[](fg:color_aqua bg:color_blue)\
$dotnet\
$golang\
$lua\
$nix_shell\
$nodejs\
$python\
$rust\
$swift\
[](fg:color_blue bg:color_bg3)\
$kubernetes\
[](fg:color_bg3 bg:color_bg1)\
$cmd_duration\
$status\
[](fg:color_bg1)\
$line_break\
$shell\
[❯ ](bold fg:white)\
"""

palette = "gruvbox_dark_modified"

[palettes.gruvbox_dark_modified]
color_fg0 = "#000000"
color_bg1 = "#3c3836"
color_bg3 = "#665c54"
color_blue = "#458588"
color_aqua = "#689d6a"
color_green = "#98971a"
color_orange = "#d65d0e"
color_purple = "#b16286"
color_red = "#cc241d"
color_yellow = "#d79921"

[cmd_duration]
format = "[ 󰔟 $duration ]($style)"
style = "bg:color_bg1 fg:color_fg0"
show_notifications = true

[container]
symbol = "⬢"
format = "[ $symbol $name ]($style)"
style = "bg:color_orange fg:color_fg0"

[directory]
format = "[  $path ]($style)[$read_only]($read_only_style)"
truncation_length = 0
truncate_to_repo = false
read_only = "󰌾 "
read_only_style = "bg:color_purple fg:red"
style = "bg:color_purple fg:color_fg0"

[dotnet]
symbol = " "
style = "bg:color_blue fg:color_fg0"
format = "[ $symbol$version 󰓾 $tfm ]($style)"

[git_branch]
format = "[ $symbol$branch(:$remote_branch) ]($style)"
style = "bg:color_aqua fg:color_fg0"
symbol = " "

[git_commit]
tag_symbol = ""
format = "[  $hash$tag ]($style)"
style = "bg:color_aqua fg:color_fg0"

[git_status]
conflicted = " conflicted "
ahead = " ahead "
behind = " behind "
diverged = " diverged "
untracked = " untracked "
stashed = " stashed "
modified = " modified "
staged = " staged "
renamed = " renamed "
deleted = " deleted "
typechanged = " type changed "
style = "bg:color_aqua fg:color_fg0"
format = "[$all_status$ahead_behind]($style)"

[golang]
symbol = " "
style = "bg:color_blue fg:color_fg0"
format = "[ $symbol$version ]($style)"

[hostname]
format = "[$ssh_symbol$hostname ]($style)"
ssh_only = false
ssh_symbol = " "
style = "bg:color_orange fg:color_fg0"

[kubernetes]
symbol = "☸ "
disabled = false
format = "[ $symbol$context 󱎃 $namespace ]($style)"
{{- if eq .chezmoi.os "windows" }}
detect_files = ["kubectx"]
{{- else }}
detect_env_vars = ["KUBIE_ACTIVE"]
{{- end }}
style = "bg:color_bg3 fg:color_fg0"

[lua]
symbol = " "
style = "bg:color_blue fg:color_fg0"
format = "[ $symbol$version ]($style)"

[memory_usage]
symbol = "󰍛 "

[mise]
disabled = false
symbol = "󰭼 "
format = "[ $symbol$health ]($style)"
style = "bg:color_yellow fg:color_fg0"

[nix_shell]
symbol = " "
style = "bg:color_blue fg:color_fg0"
format ="[$symbol$state( \\($name\\)) ]($style)"

[nodejs]
symbol = " "
style = "bg:color_blue fg:color_fg0"
format = "[ $symbol$version ]($style)"

[os]
disabled = false
format = "[ $symbol]($style)"
style = "bg:color_orange fg:color_fg0"

[os.symbols]
Alpine = " "
Arch = " "
Debian = " "
Fedora = " "
FreeBSD = " "
Linux = " "
Macos = " "
NixOS = " "
Raspbian = " "
Redhat = " "
RedHatEnterprise = " "
Ubuntu = " "
Windows = " "

[package]
symbol = "󰏗 "

[python]
symbol = " "
style = "bg:color_blue fg:color_fg0"
format = "[ $symbol$version ]($style)"

[rust]
symbol = "󱘗 "
style = "bg:color_blue fg:color_fg0"
format = "[ $symbol$version ]($style)"

[swift]
symbol = " "
style = "bg:color_blue fg:color_fg0"
format = "[ $symbol$version ]($style)"

[shell]
disabled = false
format = "[ $indicator ]($style)"
bash_indicator = "bash"
powershell_indicator = "winps"
pwsh_indicator = "pwsh"
style = "white"

[status]
disabled = false
symbol = ""
format = "[ $symbol $status ]($style)"
style = "bg:color_bg1 fg:color_red"

[username]
show_always = true
format = "[ $user ]($style)"
style_user = "bg:color_orange fg:color_fg0"
style_root = "bg:color_orange fg:color_red"
