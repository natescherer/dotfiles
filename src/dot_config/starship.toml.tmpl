[cmd_duration]
format = 'Last command took [$duration](bold yellow).'

[directory]
truncation_length = 0
truncate_to_repo = false
read_only = " 󰌾"

[git_branch]
symbol = " "

[git_commit]
tag_symbol = '  '

[golang]
symbol = " "

[hostname]
format = "[$ssh_symbol$hostname]($style) "
ssh_only = false
ssh_symbol = " "

[kubernetes]
disabled = false
format = '[$symbol$context \($namespace\) $symbol]($style)'
{{- if eq .chezmoi.os "windows" }}
detect_files = ["kubectx"]
{{- else }}
detect_env_vars = ["KUBIE_ACTIVE"]
{{- end }}
style = 'blue bold'

[lua]
symbol = " "

[memory_usage]
symbol = "󰍛 "

[mise]
disabled = false

[nix_shell]
symbol = " "

[nodejs]
symbol = " "

[os.symbols]
