{{- $isPersonal := promptBoolOnce . "isServer" "Is this a a personal computer? (Enter for default)" true }}
{{- $isServer := promptBoolOnce . "isServer" "Is this a server? (Enter for default)" false }}
{{- $editor := promptStringOnce . "editor" "Set preferred console editor (Enter for default):" "nano" }}

{{- $skipBash := false }}
{{- if lookPath "zsh" }}
{{- $skipBash = promptBool "Zsh installation detected. Should bash config files be skipped?" false }}
{{- end }}

{{- $macOSAdminRights := false }}
{{- if eq .chezmoi.os "darwin" }}
{{- $macOSAdminRights = promptBool "Does your regular user account have admin rights on this Mac?" false }}
{{- end }}

{{- if eq .chezmoi.os "windows" }}
cd:
    command: pwsh
{{- end }}
data:
    editor: {{ $editor }}
{{- if eq $isServer false }}
{{- $gitName := promptStringOnce . "gitName" "Git name (Enter for default):" "Nate Scherer" }}
    gitName: {{ $gitName }}
{{- $gitEmail := promptStringOnce . "gitEmail" "Git email (Enter for default):" "376408+natescherer@users.noreply.github.com" }}
    gitEmail: {{ $gitEmail }}
{{- end }}
    isPersonal: {{ $isPersonal }}
    isServer: {{ $isServer }}
    macOSAdminRights: {{ $macOSAdminRights }}
{{- if eq $isServer false }}
    modKey: {{ if eq .chezmoi.os "darwin" }}âŒ˜{{ else }}Ctrl{{ end }}
{{- end }}
    skipBash: {{ $skipBash }}
diff:
{{- if eq $isServer false }}
    command: "code"
    args:
    - "--wait"
    - "--diff"
{{- end }}
    exclude:
        - scripts
edit:
    command: {{ $editor }}
{{- if eq .chezmoi.os "windows" }}
interpreters:
    ps1:
        command: pwsh
{{- end }}
